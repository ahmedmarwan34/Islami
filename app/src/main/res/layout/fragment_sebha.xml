<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    tools:context=".islamiProject.fragments.SebhaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/head_of_sebha"
            android:layout_width="73dp"
            android:layout_height="105dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/head_of_sebha"
            android:layout_marginTop="90dp"/>

        <ImageView
            android:id="@+id/body_of_sebha"
            android:layout_width="232dp"
            android:layout_height="234dp"
            app:layout_constraintTop_toBottomOf="@id/head_of_sebha"
            android:src="@drawable/body_of_seb7a"
            app:layout_constraintStart_toStartOf="@id/head_of_sebha"
            app:layout_constraintEnd_toEndOf="@id/head_of_sebha"
            android:layout_marginTop="-30dp"/>

        <TextView
            android:id="@+id/num_sebha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/body_of_sebha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="عدد التسبيحات"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/num_sebha"
            android:text="0"
            android:textSize="19sp"
            android:padding="20dp"
            android:background="@drawable/counter_shape"
            android:layout_marginTop="20dp"/>
        
        <TextView
            android:id="@+id/azkar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/counter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text= "لا اله الا الله وحده لا شريك له له الملك وله الحمد وهو علي كل شئ قدير"
            android:textSize="25sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold" android:paddingStart="5dp"
            android:background="@drawable/counter_shape"
            android:layout_marginTop="25dp"/>







    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>